#!/bin/bash

# Git post-commit hook to auto-update package
# Place this in package-larapy/.git/hooks/post-commit

echo "üîÑ Post-commit hook: Updating documentation website package..."

# Path to documentation website (adjust as needed)
DOCS_DIR="../documentation-webiste-larapy"

if [ -d "$DOCS_DIR" ]; then
    cd "$DOCS_DIR"
    
    # Check if update script exists
    if [ -f "simple_update.py" ]; then
        echo "üì¶ Running package update..."
        python simple_update.py --quiet
        
        if [ $? -eq 0 ]; then
            echo "‚úÖ Documentation website package updated successfully"
        else
            echo "‚ùå Failed to update documentation website package"
        fi
    else
        echo "‚ö†Ô∏è  Update script not found in documentation website"
    fi
else
    echo "‚ö†Ô∏è  Documentation website directory not found: $DOCS_DIR"
fi

echo "‚úÖ Post-commit hook completed"
